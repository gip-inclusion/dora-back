{% extends "email-base.mjml" %}

{% block preview %}
    {{ data.service.structure.name }} vient de vous envoyer un message
{% endblock %}

{% block title %}
    {{ data.service.structure.name }} vient de vous envoyer un message.
{% endblock %}

{% block content %}
    <p>
        <strong>Bonjour,</strong>
    </p>

    <p>
        Le message concerne la demande d’orientation réalisée en votre nom vers le service vers le service
        «&nbsp;<a
            href="{{ data.service.get_frontend_url }}">
        {{ data.service.name }}
    </a>&nbsp;»
        de la structure
        <a
                href="{{ data.service.structure.get_frontend_url }}">
            {{ data.service.structure.name }}
        </a>.
    </p>

    <p>
        {{ message }}
    </p>
{% endblock %}
